{
  "manifest_version": 2,

  "name": "Loadr",
  "description": "Open a list of bookmarks in sequence.",
  "version": "1.0",

  "permissions": [
    "bookmarks",
    "tabs"
  ],

  "browser_action": {
    "default_title": "Loadr",
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
